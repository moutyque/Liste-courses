<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_complet_line"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="5dp">


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="@dimen/item_height"
        android:layout_marginStart="8dp"

        android:layout_weight="100"
        tools:text="TEST" />

    <LinearLayout
        android:id="@+id/ll_always_visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_qty"
            android:layout_width="@dimen/width_qty"
            android:layout_height="wrap_content"
            tools:text="17" />

        <LinearLayout
            android:id="@+id/ll_qty_modifiers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_increase_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_increase_qty" />

            <ImageView
                android:id="@+id/iv_decrease_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_decrease_qty" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        tools:visibility="gone">

        <TextView
            android:id="@+id/tv_unit"
            android:layout_width="@dimen/width_qty"
            android:layout_height="wrap_content"
            tools:text="KG" />

        <ImageView
            android:id="@+id/iv_check_item"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/item_height"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_check_item"
            tools:visibility="visible" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_param_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <Spinner
            android:id="@+id/s_unit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:spinnerMode="dialog" />

        <ImageButton
            android:id="@+id/ib_delete_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_delete" />

        <ImageView
            android:id="@+id/iv_reorder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_reorder" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_dd"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_drag_drop" />
</LinearLayout>







