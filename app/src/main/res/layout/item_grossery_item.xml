<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="@dimen/item_height"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_increase_qty"
        app:layout_constraintHorizontal_weight="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="TEST" />


    <ImageView
        android:id="@+id/iv_increase_qty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_decrease_qty"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_increase_qty" />

    <ImageView
        android:id="@+id/iv_decrease_qty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_qty"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_decrease_qty" />

    <TextView
        android:id="@+id/tv_qty"
        android:layout_width="@dimen/width_qty"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_unit"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="17" />

    <TextView
        android:id="@+id/tv_unit"
        android:layout_width="@dimen/width_qty"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/s_unit"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="KG" />

    <Spinner
        android:id="@+id/s_unit"
        android:layout_width="@dimen/width_qty"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toStartOf="@+id/iv_check_item"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_check_item"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_height"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_check_item"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>


